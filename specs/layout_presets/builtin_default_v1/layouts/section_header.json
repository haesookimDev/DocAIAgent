{
  "layout_id": "section_header",
  "description": "Section divider slide with prominent section title.",
  "slots": [
    {
      "slot_id": "section_title",
      "bbox": {
        "unit": "rel_safe",
        "x": 0.0,
        "y": 0.35,
        "w": 1.0,
        "h": 0.22
      },
      "padding_in": {
        "t": 0.06,
        "r": 0.06,
        "b": 0.06,
        "l": 0.06
      },
      "flow": {
        "type": "fixed"
      },
      "accept": {
        "kinds": [
          "text"
        ],
        "roles": [
          "title",
          "section_title"
        ]
      },
      "capacity": {
        "min": 1,
        "max": 1
      },
      "style_ref": "role.section_title",
      "overflow_policy": {
        "allow_shrink": true,
        "min_font_pt": 28,
        "on_overflow": [
          "shrink_font",
          "wrap",
          "truncate"
        ]
      },
      "z_base": 20
    },
    {
      "slot_id": "section_subtitle",
      "bbox": {
        "unit": "rel_safe",
        "x": 0.0,
        "y": 0.58,
        "w": 1.0,
