      },
      "padding_in": {
        "t": 0.04,
        "r": 0.06,
        "b": 0.04,
        "l": 0.06
      },
      "flow": {
        "type": "fixed"
      },
      "accept": {
        "kinds": [
          "text"
        ],
        "roles": [
          "subtitle"
        ]
      },
      "capacity": {
        "min": 0,
        "max": 1
      },
      "style_ref": "role.subtitle",
      "overflow_policy": {
        "allow_shrink": true,
        "min_font_pt": 14,
        "on_overflow": [
          "shrink_font",
          "wrap",
          "truncate"
        ]
      },
      "z_base": 20
    },
    {
