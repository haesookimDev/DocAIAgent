{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://workagent.example.com/schemas/inputs/slides_deck_builder_v1.schema.json",
  "title": "Slides Deck Builder Inputs v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["prompt", "file_ids", "template_id", "brand_kit_id", "options"],
  "properties": {
    "prompt": { "type": "string", "minLength": 1, "maxLength": 20000 },
    "language": { "type": "string", "minLength": 2, "maxLength": 20, "default": "en" },
    "audience": { "type": "string", "maxLength": 200 },
    "tone": { "type": "string", "maxLength": 200 },

    "file_ids": {
      "type": "array",
      "minItems": 0,
      "maxItems": 200,
      "items": { "type": "string", "minLength": 1, "maxLength": 120 }
    },

    "template_id": { "type": "string", "minLength": 1, "maxLength": 120 },
    "brand_kit_id": { "type": "string", "minLength": 1, "maxLength": 120 },

    "options": {
      "type": "object",
      "additionalProperties": false,
      "required": ["slide_count"],
      "properties": {
        "slide_count": { "type": "integer", "minimum": 1, "maximum": 200 },
        "require_outline_approval": { "type": "boolean", "default": true },
        "include_citations": { "type": "boolean", "default": true },
        "allow_external_web": { "type": "boolean", "default": false },
        "slide_size": { "type": "string", "maxLength": 80, "default": "widescreen_16_9" }
      }
    },

    "extensions": { "type": "object" }
  }
}
