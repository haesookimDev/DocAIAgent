{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://workagent.example.com/schemas/ir/outline_v1.schema.json",
  "title": "Outline v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "document_kind", "title", "language", "items"],
  "properties": {
    "schema_version": { "type": "string", "const": "outline_v1" },
    "document_kind": { "type": "string", "enum": ["slides", "doc"] },

    "title": { "type": "string", "minLength": 1, "maxLength": 300 },
    "language": { "type": "string", "minLength": 2, "maxLength": 20 },

    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 500,
      "items": { "$ref": "#/$defs/outlineItem" }
    },

    "sections": {
      "type": "array",
      "maxItems": 200,
      "items": { "$ref": "#/$defs/section" }
    },

    "extensions": { "type": "object" }
  },

  "$defs": {
    "outlineItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "kind", "title"],
      "properties": {
        "id": { "type": "string", "minLength": 1, "maxLength": 120 },

        "kind": { "type": "string", "enum": ["slide", "doc_section", "divider"] },

        "slide_type": { "type": "string", "enum": ["title", "section", "content", "closing", "appendix"] },

        "title": { "type": "string", "minLength": 1, "maxLength": 500 },
        "subtitle": { "type": "string", "maxLength": 500 },
        "goal": { "type": "string", "maxLength": 500 },

        "key_points": {
          "type": "array",
          "maxItems": 20,
          "items": { "type": "string", "minLength": 1, "maxLength": 300 }
        },

        "suggested_layout_id": { "type": "string", "maxLength": 120 },

        "expected_elements": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "bullets": { "type": "integer", "minimum": 0, "maximum": 50 },
            "has_chart": { "type": "boolean" },
            "has_table": { "type": "boolean" },
            "has_image": { "type": "boolean" }
          }
        },

        "extensions": { "type": "object" }
      },
      "allOf": [
        {
          "if": { "properties": { "kind": { "const": "slide" } } },
          "then": { "required": ["slide_type"] }
        }
      ]
    },

    "section": {
      "type": "object",
      "additionalProperties": false,
      "required": ["section_id", "title", "item_ids"],
      "properties": {
        "section_id": { "type": "string", "minLength": 1, "maxLength": 120 },
        "title": { "type": "string", "minLength": 1, "maxLength": 300 },
        "item_ids": {
          "type": "array",
          "minItems": 1,
          "maxItems": 500,
          "items": { "type": "string", "minLength": 1, "maxLength": 120 }
        },
        "extensions": { "type": "object" }
      }
    }
  }
}
