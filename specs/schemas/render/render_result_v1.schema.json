{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://workagent.example.com/schemas/render/render_result_v1.schema.json",
  "title": "Render Result v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "pptx_storage_key", "render_report"],
  "properties": {
    "schema_version": { "type": "string", "const": "render_result_v1" },

    "pptx_storage_key": { "type": "string", "minLength": 1 },

    "preview_pdf_storage_key": { "type": "string" },

    "thumbnails": {
      "type": "array",
      "maxItems": 5000,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["slide_id", "storage_key"],
        "properties": {
          "slide_id": { "type": "string", "minLength": 1, "maxLength": 120 },
          "storage_key": { "type": "string", "minLength": 1 }
        }
      }
    },

    "layout_plan_storage_key": { "type": "string" },
    "ops_storage_key": { "type": "string" },

    "render_report": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema_version", "renderer", "time_ms", "qc_summary"],
      "properties": {
        "schema_version": { "type": "string", "const": "render_report_v1" },

        "run_id": { "type": "string" },
        "artifact_version_id": { "type": "string" },

        "renderer": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "version"],
          "properties": {
            "name": { "type": "string", "minLength": 1, "maxLength": 120 },
            "version": { "type": "string", "minLength": 1, "maxLength": 50 }
          }
        },

        "time_ms": { "type": "integer", "minimum": 0, "maximum": 3600000 },

        "warnings": {
          "type": "array",
          "maxItems": 2000,
          "items": { "$ref": "#/$defs/message" }
        },

        "errors": {
          "type": "array",
          "maxItems": 2000,
          "items": { "$ref": "#/$defs/message" }
        },

        "missing_assets": {
          "type": "array",
          "maxItems": 2000,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["asset_id", "reason"],
            "properties": {
              "asset_id": { "type": "string", "minLength": 1 },
              "reason": { "type": "string", "minLength": 1, "maxLength": 300 },
              "requested_by": { "type": "string" }
            }
          }
        },

        "qc_summary": {
          "type": "object",
          "additionalProperties": false,
          "required": ["overflow", "overlap", "out_of_bounds", "min_font"],
          "properties": {
            "overflow": { "type": "integer", "minimum": 0 },
            "overlap": { "type": "integer", "minimum": 0 },
            "out_of_bounds": { "type": "integer", "minimum": 0 },
            "min_font": { "type": "integer", "minimum": 0 }
          }
        },

        "outputs": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "pptx_storage_key": { "type": "string" },
            "preview_pdf_storage_key": { "type": "string" },
            "layout_plan_storage_key": { "type": "string" },
            "ops_storage_key": { "type": "string" }
          }
        },

        "metrics": { "type": "object", "additionalProperties": true },

        "extensions": { "type": "object" }
      }
    },

    "extensions": { "type": "object" }
  },

  "$defs": {
    "message": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string", "minLength": 1, "maxLength": 80 },
        "message": { "type": "string", "minLength": 1, "maxLength": 2000 },
        "severity": { "type": "string", "enum": ["info", "warning", "error"], "default": "warning" },
        "slide_id": { "type": "string" },
        "element_id": { "type": "string" },
        "details": { "type": "object" }
      }
    }
  }
}
