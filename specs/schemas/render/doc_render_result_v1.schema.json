{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://workagent.example.com/schemas/render/doc_render_result_v1.schema.json",
  "title": "Doc Render Result v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "docx_storage_key", "report"],
  "properties": {
    "schema_version": { "type": "string", "const": "doc_render_result_v1" },
    "docx_storage_key": { "type": "string", "minLength": 1 },
    "pdf_storage_key": { "type": "string" },

    "report": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema_version", "renderer", "time_ms"],
      "properties": {
        "schema_version": { "type": "string", "const": "doc_render_report_v1" },
        "renderer": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "version"],
          "properties": {
            "name": { "type": "string", "minLength": 1, "maxLength": 120 },
            "version": { "type": "string", "minLength": 1, "maxLength": 50 }
          }
        },
        "time_ms": { "type": "integer", "minimum": 0, "maximum": 3600000 },
        "warnings": { "type": "array", "maxItems": 2000, "items": { "$ref": "#/$defs/msg" } },
        "errors": { "type": "array", "maxItems": 2000, "items": { "$ref": "#/$defs/msg" } },
        "missing_assets": {
          "type": "array",
          "maxItems": 2000,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["asset_id", "reason"],
            "properties": {
              "asset_id": { "type": "string", "minLength": 1 },
              "reason": { "type": "string", "minLength": 1, "maxLength": 300 }
            }
          }
        },
        "metrics": { "type": "object", "additionalProperties": true }
      }
    },

    "extensions": { "type": "object" }
  },
  "$defs": {
    "msg": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string", "minLength": 1, "maxLength": 80 },
        "message": { "type": "string", "minLength": 1, "maxLength": 2000 },
        "severity": { "type": "string", "enum": ["info", "warning", "error"], "default": "warning" },
        "section_id": { "type": "string" },
        "block_id": { "type": "string" },
        "details": { "type": "object" }
      }
    }
  }
}
